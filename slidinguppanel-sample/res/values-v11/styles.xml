<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:buttonStyle">@style/ButtonSlidingView</item>
        <item name="android:imageButtonStyle">@style/ImageButtonSlidingView</item>
    </style>

    <style name="ButtonSlidingView" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/btn_default_holo_light</item>
    </style>

    <style name="ImageButtonSlidingView" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/btn_default_holo_light</item>
    </style>

</resources>